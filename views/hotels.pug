extends layout

block content

  include header

  #main
    each hotel in data
      if hotel.url
        .row
          .col
            #hotel-title
              h2
                a(href=hotel.path) #{hotel.name}
        .row
          .col
            #hotel-image
              figure
                a(href=hotel.url)
                  img(src=hotel.image.url)
          .col
            #hotel-description
              != hotel.html
